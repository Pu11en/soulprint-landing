# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key

# Application Configuration
NEXT_PUBLIC_API_URL=/api
NODE_ENV=development
NEXT_PUBLIC_APP_VERSION=1.0.0

# Feature Flags
NEXT_PUBLIC_ENABLE_DEBUG_MODE=true
NEXT_PUBLIC_ENABLE_ERROR_REPORTING=true
NEXT_PUBLIC_ENABLE_PERFORMANCE_MONITORING=true

# API Configuration
NEXT_PUBLIC_API_TIMEOUT=10000
NEXT_PUBLIC_API_RETRY_ATTEMPTS=3
NEXT_PUBLIC_API_RETRY_DELAY=1000

# Storage Configuration
NEXT_PUBLIC_STORAGE_PREFIX=viracut
NEXT_PUBLIC_MAX_FILE_SIZE=52428800
NEXT_PUBLIC_ALLOWED_FILE_TYPES=video/mp4,video/webm,image/jpeg,image/png,image/gif,audio/mpeg,audio/wav

# Export Configuration
NEXT_PUBLIC_MAX_EXPORT_DURATION=300
NEXT_PUBLIC_DEFAULT_EXPORT_QUALITY=medium
NEXT_PUBLIC_SUPPORTED_EXPORT_FORMATS=mp4,webm

# UI Configuration
NEXT_PUBLIC_DEFAULT_THEME=system
NEXT_PUBLIC_DEFAULT_LANGUAGE=en
NEXT_PUBLIC_ENABLE_ANIMATIONS=true

# Performance Configuration
NEXT_PUBLIC_RENDER_TIME_THRESHOLD=16
NEXT_PUBLIC_API_RESPONSE_TIME_THRESHOLD=1000
NEXT_PUBLIC_LOAD_TIME_THRESHOLD=3000