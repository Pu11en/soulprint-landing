# ===========================================
# SoulPrint Environment Variables Template
# ===========================================
# Copy this file to .env.local and fill in your values
# DO NOT commit .env.local to git!

# -------------------------------------------
# Supabase (REQUIRED)
# Get these from: https://supabase.com/dashboard/project/_/settings/api
# -------------------------------------------
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# -------------------------------------------
# AI Services (REQUIRED)
# -------------------------------------------
GEMINI_API_KEY=your-gemini-api-key
ASSEMBLYAI_API_KEY=your-assemblyai-key

# -------------------------------------------
# Streak CRM (Optional but recommended)
# -------------------------------------------
STREAK_API_KEY=your-streak-api-key
STREAK_PIPELINE_KEY=your-pipeline-key

# -------------------------------------------
# Security
# -------------------------------------------
# Access code for gate entry
ACCESS_GATE_CODE=7423

# Secret for encrypting API keys (generate with: openssl rand -hex 32)
API_KEY_ENCRYPTION_SECRET=generate-a-random-64-char-hex-string

# -------------------------------------------
# Demo Mode (Optional)
# -------------------------------------------
DEMO_USER_EMAIL=demo@yourdomain.com
DEMO_USER_PASSWORD=your-demo-password

# -------------------------------------------
# Site Configuration
# -------------------------------------------
NEXT_PUBLIC_SITE_URL=https://your-domain.com

# -------------------------------------------
# Email (Gmail OAuth)
# -------------------------------------------
# GMAIL_USER=your-gmail@gmail.com
# GMAIL_CLIENT_ID=your-client-id
# GMAIL_CLIENT_SECRET=your-client-secret
# GMAIL_REFRESH_TOKEN=your-refresh-token
