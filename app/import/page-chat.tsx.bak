'use client';

import Link from 'next/link';
import { useState, useRef, useEffect } from 'react';
import { useRouter } from 'next/navigation';
import { AnimatePresence, motion } from 'framer-motion';
import { Upload, CheckCircle2, AlertCircle, Loader2, Sparkles, Heart, FileArchive, Send } from 'lucide-react';
import { BackgroundBeams } from '@/components/ui/background-beams';
import { RingProgress } from '@/components/ui/ring-progress';
import { generateClientSoulprint, type ClientSoulprint } from '@/lib/import/client-soulprint';

type Phase = 'greeting' | 'explain' | 'upload' | 'processing' | 'learning' | 'complete' | 'error';

interface ChatMessage {
  id: string;
  type: 'ai' | 'user' | 'system';
  content: string | React.ReactNode;
  typing?: boolean;
}

const delay = (ms: number) => new Promise(resolve => setTimeout(resolve, ms));

export default function ImportChatPage() {
  const router = useRouter();
  const [phase, setPhase] = useState<Phase>('greeting');
  const [messages, setMessages] = useState<ChatMessage[]>([]);
  const [checkingExisting, setCheckingExisting] = useState(true);
  const [errorMessage, setErrorMessage] = useState('');
  const [progress, setProgress] = useState(0);
  const [progressStage, setProgressStage] = useState('');
  const [dragActive, setDragActive] = useState(false);
  const [soulprint, setSoulprint] = useState<ClientSoulprint | null>(null);
  const [showUploadZone, setShowUploadZone] = useState(false);
  const [isTyping, setIsTyping] = useState(false);
  const fileInputRef = useRef<HTMLInputElement>(null);
  const chatEndRef = useRef<HTMLDivElement>(null);

  useEffect(() => {
    const checkExisting = async () => {
      try {
        const res = await fetch('/api/memory/status');
        const data = await res.json();
        if (data.status === 'ready' || data.hasSoulprint) {
          router.push('/chat');
          return;
        }
      } catch {}
      setCheckingExisting(false);
      startConversation();
    };
    checkExisting();
  }, [router]);

  useEffect(() => {
    chatEndRef.current?.scrollIntoView({ behavior: 'smooth' });
  }, [messages]);

  const addMessage = async (msg: Omit<ChatMessage, 'id'>, typeDelay = true) => {
    const id = Date.now().toString();
    
    if (msg.type === 'ai' && typeDelay) {
      setIsTyping(true);
      await delay(800 + Math.random() * 600);
      setIsTyping(false);
    }
    
    setMessages(prev => [...prev, { ...msg, id }]);
    return id;
  };

  const startConversation = async () => {
    await delay(500);
    await addMessage({
      type: 'ai',
      content: "Hey there! üëã I'm your new AI assistant."
    });
    
    await addMessage({
      type: 'ai',
      content: "Right now, I don't know anything about you. I'm kind of like a goldfish with no memories. üê†"
    });

    await addMessage({
      type: 'ai',
      content: "But here's the cool part ‚Äî if you've been using ChatGPT, you can share that history with me and I'll instantly understand you."
    });

    setPhase('explain');
    
    await delay(500);
    await addMessage({
      type: 'system',
      content: (
        <div className="flex gap-3">
          <motion.button
            whileHover={{ scale: 1.03 }}
            whileTap={{ scale: 0.97 }}
            onClick={handleWantToImport}
            className="px-5 py-2.5 bg-orange-500 hover:bg-orange-400 text-black font-medium rounded-xl transition-colors text-sm"
          >
            Yeah, let's do it!
          </motion.button>
          <motion.button
            whileHover={{ scale: 1.03 }}
            whileTap={{ scale: 0.97 }}
            onClick={handleSkip}
            className="px-5 py-2.5 bg-white/5 hover:bg-white/10 text-white/70 font-medium rounded-xl transition-colors text-sm"
          >
            Skip for now
          </motion.button>
        </div>
      )
    });
  };

  const handleWantToImport = async () => {
    setMessages(prev => prev.filter(m => m.type !== 'system'));
    
    await addMessage({
      type: 'user',
      content: "Yeah, let's do it!"
    }, false);

    await addMessage({
      type: 'ai',
      content: "Awesome! üéâ Here's what you need to do:"
    });

    await addMessage({
      type: 'ai',
      content: (
        <div className="space-y-3 text-white/80">
          <p className="font-medium text-white">Export your ChatGPT data:</p>
          <div className="space-y-2 text-sm">
            <p>1Ô∏è‚É£ Go to <a href="https://chat.openai.com" target="_blank" rel="noopener noreferrer" className="text-orange-400 hover:underline">chat.openai.com</a></p>
            <p>2Ô∏è‚É£ Settings ‚Üí Data Controls ‚Üí Export</p>
            <p>3Ô∏è‚É£ Check your email for the download link</p>
          </div>
        </div>
      )
    });

    await addMessage({
      type: 'ai',
      content: "Once you have that ZIP file, just drop it below. And don't worry ‚Äî everything happens right here in your browser. Your data never leaves your device. üîí"
    });

    setPhase('upload');
    setShowUploadZone(true);
  };

  const handleSkip = async () => {
    setMessages(prev => prev.filter(m => m.type !== 'system'));
    
    await addMessage({
      type: 'user',
      content: "Skip for now"
    }, false);

    await addMessage({
      type: 'ai',
      content: "No problem! We can always do this later. For now, I'll just get to know you the old-fashioned way ‚Äî through conversation. üòä"
    });

    await delay(1000);
    await addMessage({
      type: 'ai',
      content: "Ready to chat?"
    });

    await delay(500);
    await addMessage({
      type: 'system',
      content: (
        <motion.button
          whileHover={{ scale: 1.03 }}
          whileTap={{ scale: 0.97 }}
          onClick={() => router.push('/chat')}
          className="px-6 py-3 bg-orange-500 hover:bg-orange-400 text-black font-semibold rounded-xl transition-colors"
        >
          Start Chatting ‚Üí
        </motion.button>
      )
    });
  };

  const handleFile = async (file: File) => {
    if (!file.name.endsWith('.zip')) {
      await addMessage({
        type: 'ai',
        content: "Hmm, that doesn't look like a ZIP file. Make sure you're uploading the file OpenAI sent you! üìß"
      });
      return;
    }

    setShowUploadZone(false);
    setPhase('processing');

    await addMessage({
      type: 'user',
      content: (
        <div className="flex items-center gap-2">
          <FileArchive className="w-4 h-4 text-orange-400" />
          <span>{file.name}</span>
        </div>
      )
    }, false);

    await addMessage({
      type: 'ai',
      content: "Perfect! Let me take a look... üîç"
    });

    try {
      const { soulprint: result, conversationChunks } = await generateClientSoulprint(file, (stage, percent) => {
        setProgressStage(stage);
        setProgress(percent);
      });

      setSoulprint(result);

      // Add progress message
      await addMessage({
        type: 'system',
        content: (
          <div className="flex items-center gap-4 p-4 rounded-xl bg-white/5 border border-white/10">
            <RingProgress progress={progress} size={50} strokeWidth={4} />
            <div>
              <p className="text-white/80 text-sm font-medium">Processing...</p>
              <p className="text-white/40 text-xs">{progressStage}</p>
            </div>
          </div>
        )
      });

      setProgressStage('Saving your memories...');
      setProgress(90);

      const response = await fetch('/api/import/save-soulprint', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ soulprint: result, conversationChunks }),
      });

      if (!response.ok) {
        const data = await response.json();
        throw new Error(data.error || 'Failed to save');
      }

      setProgress(100);
      setPhase('complete');

      // Learning phase - show what we discovered
      await addMessage({
        type: 'ai',
        content: "Wow, I've learned so much about you! üß†‚ú®"
      });

      await addMessage({
        type: 'ai',
        content: (
          <div className="space-y-3">
            <p className="text-white/90">Here's a taste of what I discovered:</p>
            <div className="grid grid-cols-2 gap-3">
              <div className="p-3 rounded-lg bg-white/5 border border-white/10">
                <p className="text-2xl font-bold text-orange-400">{result.facts?.length || 0}</p>
                <p className="text-xs text-white/50">things I learned about you</p>
              </div>
              <div className="p-3 rounded-lg bg-white/5 border border-white/10">
                <p className="text-2xl font-bold text-orange-400">{result.topics?.length || 0}</p>
                <p className="text-xs text-white/50">topics you care about</p>
              </div>
            </div>
          </div>
        )
      });

      await addMessage({
        type: 'ai',
        content: (
          <span className="flex items-center gap-2">
            <Heart className="w-4 h-4 text-pink-400" />
            I feel like I really know you now. Ready to put this knowledge to use?
          </span>
        )
      });

      await delay(500);
      await addMessage({
        type: 'system',
        content: (
          <motion.button
            whileHover={{ scale: 1.03 }}
            whileTap={{ scale: 0.97 }}
            onClick={() => router.push('/chat')}
            className="px-6 py-3 bg-orange-500 hover:bg-orange-400 text-black font-semibold rounded-xl transition-colors flex items-center gap-2"
          >
            <Sparkles className="w-4 h-4" />
            Let's Chat!
          </motion.button>
        )
      });

    } catch (err) {
      console.error('Import error:', err);
      setPhase('error');
      
      await addMessage({
        type: 'ai',
        content: `Oops! Something went wrong: ${err instanceof Error ? err.message : 'Unknown error'}. Want to try again?`
      });

      setShowUploadZone(true);
    }
  };

  const handleDrop = (e: React.DragEvent) => {
    e.preventDefault();
    setDragActive(false);
    if (e.dataTransfer.files?.[0]) {
      handleFile(e.dataTransfer.files[0]);
    }
  };

  const handleDrag = (e: React.DragEvent) => {
    e.preventDefault();
    setDragActive(e.type === 'dragenter' || e.type === 'dragover');
  };

  if (checkingExisting) {
    return (
      <main className="h-screen bg-black flex items-center justify-center overflow-hidden">
        <Loader2 className="w-8 h-8 text-orange-500 animate-spin" />
      </main>
    );
  }

  return (
    <main className="h-screen bg-black flex flex-col overflow-hidden relative">
      <BackgroundBeams />

      {/* Header */}
      <header className="relative z-10 flex items-center justify-center px-6 py-4 border-b border-white/5">
        <Link href="/" className="flex items-center gap-2.5">
          <img src="/logo.svg" alt="SoulPrint" className="w-7 h-7" />
          <span className="text-white font-semibold">SoulPrint</span>
        </Link>
      </header>

      {/* Chat Container */}
      <div className="flex-1 overflow-y-auto px-4 py-8 relative z-10">
        <div className="max-w-2xl mx-auto space-y-4">
          <AnimatePresence mode="popLayout">
            {messages.map((msg) => (
              <motion.div
                key={msg.id}
                initial={{ opacity: 0, y: 10, scale: 0.95 }}
                animate={{ opacity: 1, y: 0, scale: 1 }}
                exit={{ opacity: 0, scale: 0.95 }}
                transition={{ duration: 0.2 }}
                className={`flex ${msg.type === 'user' ? 'justify-end' : msg.type === 'system' ? 'justify-center' : 'justify-start'}`}
              >
                {msg.type === 'ai' && (
                  <div className="flex items-start gap-3 max-w-[85%]">
                    <div className="w-8 h-8 rounded-full bg-gradient-to-br from-orange-400 to-orange-600 flex items-center justify-center shrink-0">
                      <Sparkles className="w-4 h-4 text-white" />
                    </div>
                    <div className="p-4 rounded-2xl rounded-tl-md bg-white/[0.06] border border-white/10 text-white/90 text-sm leading-relaxed">
                      {msg.content}
                    </div>
                  </div>
                )}

                {msg.type === 'user' && (
                  <div className="p-4 rounded-2xl rounded-tr-md bg-orange-500/20 border border-orange-500/30 text-white/90 text-sm max-w-[85%]">
                    {msg.content}
                  </div>
                )}

                {msg.type === 'system' && (
                  <div className="py-2">
                    {msg.content}
                  </div>
                )}
              </motion.div>
            ))}

            {/* Typing indicator */}
            {isTyping && (
              <motion.div
                initial={{ opacity: 0, y: 10 }}
                animate={{ opacity: 1, y: 0 }}
                exit={{ opacity: 0 }}
                className="flex items-start gap-3"
              >
                <div className="w-8 h-8 rounded-full bg-gradient-to-br from-orange-400 to-orange-600 flex items-center justify-center shrink-0">
                  <Sparkles className="w-4 h-4 text-white" />
                </div>
                <div className="p-4 rounded-2xl rounded-tl-md bg-white/[0.06] border border-white/10">
                  <div className="flex gap-1">
                    <motion.div
                      animate={{ opacity: [0.4, 1, 0.4] }}
                      transition={{ repeat: Infinity, duration: 1, delay: 0 }}
                      className="w-2 h-2 rounded-full bg-white/50"
                    />
                    <motion.div
                      animate={{ opacity: [0.4, 1, 0.4] }}
                      transition={{ repeat: Infinity, duration: 1, delay: 0.2 }}
                      className="w-2 h-2 rounded-full bg-white/50"
                    />
                    <motion.div
                      animate={{ opacity: [0.4, 1, 0.4] }}
                      transition={{ repeat: Infinity, duration: 1, delay: 0.4 }}
                      className="w-2 h-2 rounded-full bg-white/50"
                    />
                  </div>
                </div>
              </motion.div>
            )}
          </AnimatePresence>
          <div ref={chatEndRef} />
        </div>
      </div>

      {/* Upload Zone (when active) */}
      <AnimatePresence>
        {showUploadZone && (
          <motion.div
            initial={{ opacity: 0, y: 20 }}
            animate={{ opacity: 1, y: 0 }}
            exit={{ opacity: 0, y: 20 }}
            className="relative z-10 px-4 pb-6"
          >
            <div className="max-w-2xl mx-auto">
              <div
                onDragEnter={handleDrag}
                onDragLeave={handleDrag}
                onDragOver={handleDrag}
                onDrop={handleDrop}
                onClick={() => fileInputRef.current?.click()}
                className={`
                  cursor-pointer rounded-2xl border-2 border-dashed p-8 text-center transition-all duration-200
                  ${dragActive 
                    ? 'border-orange-500 bg-orange-500/10' 
                    : 'border-white/20 bg-white/[0.03] hover:border-orange-500/50 hover:bg-white/[0.05]'
                  }
                `}
              >
                <input
                  ref={fileInputRef}
                  type="file"
                  accept=".zip"
                  onChange={(e) => e.target.files?.[0] && handleFile(e.target.files[0])}
                  className="hidden"
                />
                <Upload className={`w-8 h-8 mx-auto mb-3 transition-colors ${dragActive ? 'text-orange-400' : 'text-white/30'}`} />
                <p className="text-white/70 text-sm font-medium">
                  {dragActive ? 'Drop it here!' : 'Drop your ZIP file or click to browse'}
                </p>
              </div>
            </div>
          </motion.div>
        )}
      </AnimatePresence>
    </main>
  );
}
